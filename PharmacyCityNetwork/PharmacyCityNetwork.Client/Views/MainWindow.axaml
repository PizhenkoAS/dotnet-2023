<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PharmacyCityNetwork.Client.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PharmacyCityNetwork.Client.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="PharmacyCityNetwork.Client">
    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<Window.Styles>
		<StyleInclude Source="/PharmacyCityNetworkStyles.axaml"/>
	</Window.Styles>
	
	<Grid Classes="MainGrid" RowDefinitions="Auto,*">
		<StackPanel Grid.Row="0" Orientation="Horizontal">
			<Button Classes="ToolButton" Command="{Binding	OnAddComand}">
				<Image Source="/Assets/task-add.png"/>
			</Button>
			<Button Classes="ToolButton">
				<Image Source="/Assets/task-settings.png"/>
			</Button>
			<Button Classes="ToolButton">
				<Image Source="/Assets/task-remove.png"/>
			</Button>
		</StackPanel>
		<DataGrid Grid.Row="1" AutoGenerateColumns="True"
				  Items="{Binding Products}">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Наименование" Binding="{Binding ProductName}"/>
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</Window>
